{
  "version": 2,
  "name": "financial-advisor-dashboard",
  "builds": [
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/public/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "outputDirectory": "public",
  "installCommand": "npm install",
  "buildCommand": "echo 'Static site - no build required'",
  "devCommand": "python -m http.server 8000"
}
